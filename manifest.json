{
	"manifest_version": 2,
	"name": "OhMyTime",
	"description": "See how much time you waste on social networks.",
	"version": "0.1",
	"author": "Ahsan Sajjad",
	"browser_action": {
		"default_title": "Have a good day",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	  }
}